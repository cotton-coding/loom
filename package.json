{
  "name": "@cotton-coding/loom-fs",
  "module": "dist/app.js",
  "author": "Cotton Coding",
  "license": "MIT",
  "version": "0.2.3",
  "description": "A file system wrapper for Node.js and Bun",
  "keywords": [
    "bun",
    "fs",
    "directory",
    "dir",
    "file",
    "file system",
    "filesystem",
    "node",
    "nodejs",
    "wrapper"
  ],
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "build": "bun build --minify -e --splitting --target node ./app.ts --out-dir dist",
    "publish": "publint && npm publish",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --ext .ts . --fix"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "bun-plugin-dts": "^0.2.1",
    "eslint": "^8.56.0",
    "publint": "^0.2.7"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "yaml": "^2.3.4"
  },
  "exports": {
    ".": "./dist/app.js"
  }
}
